{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017"
    ],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "types": [
      "lazy-linq-with-types",
      "should",
      "mocha",
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}